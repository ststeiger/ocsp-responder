@inject Model.MainNavigationData mainNavigationData
<!DOCTYPE html>
<html lang="de-CH">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />


    <meta http-equiv="content-language" content="de-CH" />

    <meta name="description" content="Tools zum Erstellen von WebApplikationen" />
    <meta name="keywords" content="WebTools" />



    <!-- Meta  -->


    @RenderSection("AdditionalMeta", false)


    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/scrollbar-black.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

    <style type="text/css" media="all">

    </style>


    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "WebPage",
          "name": "WebTools",
          "url": "https://tools.henri-bernhard.ch",
          "description": "Tools zum Entwickeln von Web-Software."
        }
    </script>


    <!--
    <script type="importmap"></script>
    -->
    <!--
    <script src="~/js/site.js" asp-append-version="true"></script>
    -->
    @await RenderSectionAsync("styleSectionHead", required: false)
    @await RenderSectionAsync("scriptSectionHead", required: false)
</head>
<body>

    <header class="topHeader">
        <nav class="topNav">
            <div class="nav-container">
                <input type="checkbox" id="menu-toggle">
                <label for="menu-toggle" class="hamburger-menu" aria-label="Toggle navigation"></label>
                <ul class="menu">
                    <li>
                        <a href="@Url.Content("~/")">
                            <svg class="homeIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 554 554" height="1em">
                                <title>Home</title>
                                <desc>Home Icon</desc>
                                <g class="dynamicIconColor">
                                    <path d="M464.667 58.2H373.89v38.706l90.777 73.85zM464.667 345.84v-38.382l-90.777-73.972-96.902-78.964L89.309 307.458v208.72h118.318V310.65H346.35v205.528h118.317z" />
                                    <path d="m89.309 287.722 187.679-152.936 96.902 78.963 90.777 73.973 41.629 33.923 47.681-58.514-89.31-72.653-90.777-73.85-96.902-78.829L0 263.131l47.681 58.514z" />
                                </g>
                            </svg>
                        </a>
                    </li>

                    
                    @foreach (Model.MainNavigationItem navigationItem in @mainNavigationData.NavigationItems)
                    {
                        <li>
                            <a asp-area="" asp-page="@navigationItem.Action">@navigationItem.Text</a>
                        </li>
                    }

                </ul>
            </div>
        </nav>
    </header>

    <main class="mainContent">
        @RenderBody()
    </main>

    <footer class="bottomFooter">
        <p>
            Copyright &copy; @System.DateTime.Now.Year Stefan Steiger<br />
            <!--
            Alle Rechte vorbehalten.<br />
            -->
            All rights reserved.<br />
        </p>
    </footer>

    @await RenderSectionAsync("styleSectionBodyEnd", required: false)
    @await RenderSectionAsync("scriptSectionBodyEnd", required: false)
</body>
</html>
